{
    "builds": [
      {
        "src": "requirements.txt",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.9",
          "includeFiles": ["*.py", "templates/*", "static/*"],
          "buildCommand": "pip install -r requirements.txt"
        }
      }
    ]
  }